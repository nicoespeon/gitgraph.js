{
  "name": "gitgraph",
  "version": "2.0.0-alpha",
  "description": "A JavaScript library to draw pretty git graphs in the browser",
  "contributors": [
    {
      "name": "Fabien Bernard",
      "email": "fabien0102@gmail.com"
    }
  ],
  "main": "./lib/bundle.umd.js",
  "module": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "cm": "git-cz",
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc -w",
    "build": "run-s build:*",
    "build:clear": "rimraf ./lib",
    "build:tsc": "tsc",
    "build:bundle": "rollup -c rollup.config.js",
    "build:browserify": "browserify ./lib/bundle.umd.js -o ./lib/bundle.js",
    "build:minify": "uglifyjs -c -m -o ./lib/bundle.min.js -- ./lib/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicoespeon/gitgraph.js.git"
  },
  "keywords": [
    "git",
    "graph",
    "javascript"
  ],
  "author": "Nicolas Carlo <nicolascarlo.espeon@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicoespeon/gitgraph.js/issues"
  },
  "homepage": "https://github.com/nicoespeon/gitgraph.js#readme",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "browserify": "^14.5.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.8",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "uglifyjs": "^2.4.11"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "husky": "^0.14.3",
    "ts-lint": "^4.5.1"
  }
}
