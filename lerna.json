{
  "lerna": "2.5.1",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.md"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "exact": true,
      "message": "Publish"
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true
}
